<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="jp.ac.it_college.std.s21009.whoisthatpokemon.TitleFragment"
        android:label="fragment_title"
        tools:layout="@layout/fragment_title" >
        <action
            android:id="@+id/action_titleFragment_to_selectGenerationFragment"
            app:destination="@id/selectGenerationFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectGenerationFragment"
        android:name="jp.ac.it_college.std.s21009.whoisthatpokemon.SelectGenerationFragment"
        android:label="fragment_select_generation"
        tools:layout="@layout/fragment_select_generation" >
        <action
            android:id="@+id/selectToQuiz"
            app:destination="@id/quizFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="jp.ac.it_college.std.s21009.whoisthatpokemon.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz" >
        <argument
            android:name="pokemonIdList"
            app:argType="integer[]" />
        <action
            android:id="@+id/quizToQuiz"
            app:destination="@id/quizFragment" />
        <argument android:name="selectedAnswers"
            app:argType="string[]" />
        <argument
            android:name="correctAnswers"
            app:argType="string[]" />
        <action
            android:id="@+id/quizToResult"
            app:destination="@id/resultFragment" />
        <argument
            android:name="pokemonImages"
            app:argType="android.graphics.Bitmap[]" />
        <argument
            android:name="questionNumber"
            app:argType="integer"
            android:defaultValue="1" />
        <argument
            android:name="correctCount"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="jp.ac.it_college.std.s21009.whoisthatpokemon.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <argument
            android:name="selectedAnswers"
            app:argType="string[]" />
        <argument
            android:name="correctAnswers"
            app:argType="string[]" />
        <argument
            android:name="pokemonImages"
            app:argType="android.graphics.Bitmap[]" />
        <action
            android:id="@+id/resultToTitle"
            app:destination="@id/titleFragment" />
    </fragment>
</navigation>